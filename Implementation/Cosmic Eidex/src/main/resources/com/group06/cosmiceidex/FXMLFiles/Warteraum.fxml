                  <Button mnemonicParsing="false" onAction="#onAddEasyBot" prefWidth="200.0" text="Leichten Bot hinzuf端gen" />
                  <Button mnemonicParsing="false" onAction="#onAddDifficultBot" prefWidth="200.0" text="Schweren Bot hinzuf端gen" />
