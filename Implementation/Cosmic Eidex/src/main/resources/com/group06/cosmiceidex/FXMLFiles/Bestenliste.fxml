<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group06.cosmiceidex.controllers.BestenlisteController">

    <top>
        <Label alignment="CENTER" style="-fx-font-size: 46px; -fx-font-weight: bold;" text="Bestenliste" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
         <ScrollPane fx:id="bestenlisteScrollPane" prefHeight="558.0" prefWidth="1230.0">
             <content>
                 <VBox fx:id="bestenlisteBox" spacing="5" />
             </content>
         </ScrollPane>
         <Label fx:id="zuletztAktualisiertLabel" text="zuletztAktualisiertPlaceholder" textFill="#797878">
            <font>
               <Font size="10.0" />
            </font>
         </Label>
         <opaqueInsets>
            <Insets left="10.0" right="10.0" />
         </opaqueInsets>
         <padding>
            <Insets bottom="15.0" left="10.0" right="10.0" />
         </padding>
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
        </VBox>
    </center>
   <padding>
      <Insets left="15.0" right="15.0" />
   </padding>
   <bottom>
     <HBox alignment="BOTTOM_CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10" BorderPane.alignment="CENTER">
         <Button onAction="#onZurück" text="Zurück" textOverrun="CLIP" HBox.hgrow="ALWAYS" />
         <Button mnemonicParsing="false" onAction="#onAktualisieren" text="Bestenliste aktualisieren" />
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
     </HBox>
   </bottom>

</BorderPane>
