<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group06.cosmiceidex.controllers.SpielraumErstellenController">

    <top>
        <Label alignment="CENTER" style="-fx-font-size: 46px; -fx-font-weight: bold;" text="Spielraum erstellen" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Spielraumname">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <TextField fx:id="spielraumNameField" alignment="TOP_CENTER" maxWidth="300.0" prefHeight="25.0" prefWidth="100.0" promptText="Spielraumname hier eingeben" />
            <Label text="Passwort">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordField" alignment="TOP_CENTER" maxWidth="300.0" promptText="Passwort hier eingeben" />
            <Label text="Passwort wiederholen">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <PasswordField fx:id="repeatPasswordField" alignment="TOP_CENTER" maxWidth="300.0" promptText="Passwort hier wiederholen" />
         <opaqueInsets>
            <Insets bottom="15.0" />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
        </VBox>
    </center>
   <opaqueInsets>
      <Insets bottom="15.0" />
   </opaqueInsets>
   <padding>
      <Insets left="15.0" right="15.0" />
   </padding>
   <bottom>
         <HBox alignment="BOTTOM_CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10" BorderPane.alignment="CENTER">
             <Button onAction="#onAbbrechen" text="Abbrechen" textOverrun="CLIP" HBox.hgrow="ALWAYS" />
             <Button onAction="#onWeiter" text="Weiter" textOverrun="CLIP" HBox.hgrow="ALWAYS" />
         <opaqueInsets>
            <Insets bottom="15.0" />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
         </HBox>
   </bottom>

</BorderPane>
