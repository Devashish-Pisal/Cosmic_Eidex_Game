<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="root" prefHeight="720.0" prefWidth="1280.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.group06.cosmiceidex.controllers.LoginController">

    <top>
        <Label alignment="CENTER" style="-fx-font-size: 46px; -fx-font-weight: bold;" text="Log-In" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <VBox alignment="CENTER" spacing="10">
            <Label text="Benutzername">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <TextField fx:id="usernameField" alignment="TOP_CENTER" maxWidth="300.0" prefHeight="25.0" prefWidth="100.0" promptText="Benutzername hier eingeben" />
            <Label text="Passwort">
                <font>
                    <Font name="System Bold" size="15.0" />
                </font>
            </Label>
            <PasswordField fx:id="passwordField" alignment="TOP_CENTER" maxWidth="300.0" promptText="Passwort hier eingeben" />
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
         <BorderPane.margin>
            <Insets bottom="15.0" />
         </BorderPane.margin>
        </VBox>
    </center>
   <padding>
      <Insets left="15.0" right="15.0" />
   </padding>
   <bottom>
         <HBox alignment="BOTTOM_CENTER" nodeOrientation="LEFT_TO_RIGHT" spacing="10" BorderPane.alignment="CENTER">
             <Button fx:id="loginButton" onAction="#onLogIn" text="Einloggen" textOverrun="CLIP" HBox.hgrow="ALWAYS" />
             <Button onAction="#onRegistrieren" text="Registrieren" textOverrun="CLIP" />
         <Button mnemonicParsing="false" onAction="#onCustomIP" text="Eigene IP-Adresse verwenden" />
         <padding>
            <Insets bottom="15.0" />
         </padding>
         </HBox>
   </bottom>

</BorderPane>
